{
  "name": "@rainbowatcher/js-utils",
  "version": "0.0.3",
  "description": "Opinionated collection of common JavaScript / TypeScript utils by @rainbowatcher",
  "author": "rainbowatcher <rainbow-w@qq.com>",
  "license": "MIT",
  "keywords": [
    "utils"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "release": "pnpm build && changelogen --release && npm publish && git push --follow-tags"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.35.2",
    "changelogen": "^0.4.1",
    "eslint": "^8.34.0",
    "lint-staged": "^13.1.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.1",
    "vite": "^4.1.1",
    "vitest": "^0.28.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,json}": "eslint --fix"
  }
}
