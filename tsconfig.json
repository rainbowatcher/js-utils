{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["esnext", "DOM"],
        "module": "esnext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "packages/**/*.ts",
        "scripts/*.ts",
        "vitest.config.ts",
    ]
}
