{
    "languages": {
        "Markdown": {
            "format_on_save": "on"
        },
    },
    "prettier": {
        "allowed": false
    },
    "formatter": {
        "code_actions": {
            "source.fixAll.eslint": true
        }
    },
    "language_servers": ["eslint", "vtsls", "!typescript-language-server"],
    "language_server_options": {
        "eslint": {
            "language_ids": [
                "javascript",
                "javascriptreact",
                "json",
                "json5",
                "jsonc",
                "markdown",
                "toml",
                "typescript",
                "typescriptreact",
                "vue",
                "yaml",
            ],
        }
    }
}
